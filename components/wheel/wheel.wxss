/* components/wheel/wheel.wxss */
.wheel-container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.spin-button,
.eliminate-button {
  margin-top: 20rpx;
  width: 220rpx;
  height: 80rpx;
  background: linear-gradient(45deg, #f39c12, #ff7700);
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
  text-align: center;
}

.eliminate-button {
  background: linear-gradient(45deg, #e74c3c, #ff5252);
}
