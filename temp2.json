/* pages/lottery/lottery.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f2f2f2;
  padding: 40rpx; /* 向下移动页面 */
}

.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.user-info {
  font-size: 30rpx;
  color: #333;
}

.menu-item {
  color: #ff6600;
  font-size: 30rpx;
}

.energy-bar {
  width: 90%;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.energy-bar-bg {
  flex: 1;
  height: 24rpx;
  background: linear-gradient(90deg, #d1eaff, #66ccff);
  border-radius: 12rpx;
  overflow: hidden;
  margin-left: 10rpx;
  position: relative;
}

.energy-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #ffcc00, #ff6600);
  transition: width 0.5s ease;
}

.energy-text {
  font-size: 26rpx;
  color: #555;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 12rpx;
}

/* 动态显示的幸运值增加文本 */
.energy-increase-text {
  position: absolute;
  top: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 24rpx;
  color: #ff3333;
  animation: fadeInOut 3s ease forwards; /* 延长3秒 */
}

@keyframes fadeInOut {
  0% { opacity: 0; transform: translateY(10px); }
  20% { opacity: 1; }
  80% { opacity: 1; }
  100% { opacity: 0; transform: translateY(-10px); }
}

/* 能量条上的激光效果 */
.energy-bar-glow {
  position: absolute;
  top: 0;
  height: 100%;
  width: 6rpx; /* 更显眼的宽度 */
  background: linear-gradient(180deg, transparent, #ffdd55, #ff9900, transparent); /* 更亮的颜色 */
  box-shadow: 0 0 14rpx rgba(255, 204, 0, 1);
  animation: glowMove 1s infinite linear;
}

@keyframes glowMove {
  0% { opacity: 0.5; }
  50% { opacity: 1; }
  100% { opacity: 0.5; }
}

/* 当前能量值 */
.energy-current-value {
  position: absolute;
  top: -30rpx;
  font-size: 22rpx;
  color: #333;
  font-weight: bold;
  text-shadow: 0 0 5px rgba(255, 255, 255, 0.7);
}

/* 能量条的最大值标记 */
.energy-max-label {
  position: absolute;
  right: -20rpx;
  top: -8rpx;
  font-size: 22rpx;
  color: #333;
}
