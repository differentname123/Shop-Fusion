/* mine.wxss */

/* 页面容器 */
.page-container {
  position: relative;
  background-color: #f2f4f7; /* 柔和的浅灰色背景 */
}

/* 头部区域 */
.header {
  position: relative;
  width: 100%;
  height: 520rpx;
}

/* 头部背景 */
.header-bg {
  width: 100%;
  height: 520rpx;
  background: linear-gradient(135deg, #a1c4fd, #c2e9fb); /* 柔和的渐变色 */
  position: absolute;
  top: 0;
  left: 0;
}

/* 头像容器 */
.avatar-container {
  position: absolute;
  top: 180rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 头像样式 */
.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  background-color: #eaeaea;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 用户名样式 */
.username {
  font-size: 36rpx;
  color: #fff;
  margin-top: 20rpx;
  font-weight: bold;
}

/* 积分部分布局 */
.points-section {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.points-title {
  font-size: 32rpx;
  color: #fff;
}

.points-value {
  font-size: 32rpx;
  color: #fff;
  margin-left: 8rpx;
  font-weight: bold;
}

/* 菜单区域 */
.menu {
  margin-top: -40rpx;
  padding-top: 40rpx;
}

/* 菜单分组 */
.menu-group {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 菜单项 */
.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  transition: background-color 0.2s;
}

.menu-item + .menu-item {
  border-top: 1rpx solid #f0f0f0;
}

.menu-item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.menu-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.menu-item-right {
  display: flex;
  align-items: center;
}

.menu-subtitle {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 菜单项点击效果 */
.menu-item:active {
  background-color: #f5f5f5;
}

/* 分隔线 */
.menu-separator {
  height: 20rpx;
}

/* 加载中 */
.loading-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
}
