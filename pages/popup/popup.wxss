/* popup.wxss */

.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-content {
  width: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
}

.popup-title {
  font-size: 36rpx;
  color: #ff9800;
  font-weight: bold;
}

.popup-text {
  font-size: 28rpx;
  color: #333;
  margin: 20rpx 0;
}

.close-button,
.go-button {
  width: 100%;
  height: 60rpx;
  background-color: #4a90e2;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
}

.countdown {
  font-size: 24rpx;
  color: #f56c6c;
  margin-top: 20rpx;
}
